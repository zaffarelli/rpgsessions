upstream app{
    server ___IP_NGIA_RPGSESSIONS___:8080;
}

server {
    listen 8000;
    server_name ___IP_NGIA_NGINX___;
    location /rpgsessions/ {
        proxy_pass http://app;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Host $host;
        proxy_redirect off;
    }
    location /rpgsessions/static/  {
        alias /srv/rpgsessions_static/;
    }

    location /rpgsessions/media/ {
        alias /srv/rpgsessions_media/;
    }
}

